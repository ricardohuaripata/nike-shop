<section class="my-14 px-6 md:px-12">
  <h2
    class="text-2xl sm:text-3xl xl:text-4xl font-medium mb-5 transition-[font-size] duration-300"
  >
    Consigue nuestros iconos
  </h2>
  <div class="w-full overflow-x-scroll" style="scroll-snap-type: x mandatory;">
    <ul class="flex gap-3 pb-8">
      {
        items.map((item) => (
          <li class="carousel-item relative">
            <img
              src={item.img_src}
              alt={item.title}
              width={item.img_width}
              height={item.img_height}
              class="w-full"
            />
            <a
              href="/"
              class="absolute bottom-6 left-6 px-4 py-2 bg-white rounded-full hover:bg-gray-200"
            >
              <p class="font-medium">{item.title}</p>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  .carousel-item {
    scroll-snap-align: start;
    flex: 0 0 auto;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    width: calc(33.33% - 0.5rem);

    /* Responsive */
    @media (max-width: 1600px) {
      width: calc(30% - 0.5rem);
    }

    @media (max-width: 1024px) {
      width: calc(75% - 0.5rem);
    }
  }
</style>
