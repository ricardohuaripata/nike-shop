            <img
              src={item.img_src}
              alt={item.title}
              width={item.img_width}
              height={item.img_height}
              class="w-full"
            />
            <a
              href="/"
              class="absolute bottom-6 left-6 px-4 py-2 bg-white rounded-full hover:bg-gray-200"
            >
              <p class="font-medium">{item.title}</p>
            </a>
